<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_fondo"> <TextView
    android:text="Juego de Memoria Sostenible"
    android:textSize="22sp"
    android:textStyle="bold"
    android:textColor="@color/verde_oscuro"
    android:gravity="center"
    android:layout_marginBottom="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:text="Pon a prueba tu memoria emparejando cartas sobre sostenibilidad."
        android:textColor="#2E7D32"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnIniciarJuego"
        android:text="Iniciar Juego"
        android:backgroundTint="@color/verde_claro"
        android:textColor="@color/texto_blanco"
        android:paddingHorizontal="30dp"
        android:paddingVertical="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>